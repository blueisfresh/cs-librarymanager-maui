<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibraryManagementMaui.View.Window.DetailsWindowStudent"
             Title="Student Detail">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="15">

            <!-- LibraryCardNum -->
            <Label Text="LibraryCardNum:"
                   FontAttributes="Bold" />
            <Label Text="{Binding SelectedStudent.LibraryCardNum}"
                   FontSize="18" />

            <!-- FirstName -->
            <Label Text="FirstName:"
                   FontAttributes="Bold" />
            <Label Text="{Binding SelectedStudent.FirstName}"
                   FontSize="18" />

            <!-- LastName -->
            <Label Text="LastName:"
                   FontAttributes="Bold" />
            <Label Text="{Binding SelectedStudent.LastName}"
                   FontSize="18" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>