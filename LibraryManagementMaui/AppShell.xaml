<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LibraryManagementMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LibraryManagementMaui"
    xmlns:views="clr-namespace:LibraryManagementMaui.View"
    xmlns:components="clr-namespace:LibraryManagementMaui.Components"
    Shell.FlyoutBehavior="Disabled"
    Title="LibraryManagementMaui">

    <TabBar>
        <ShellContent
            Title="Borrow and Return"
            ContentTemplate="{DataTemplate views:BorrowReturnPage}"
            Route="BorrowReturnPage" 
            Icon="hand.png"/>

        <ShellContent
            Title="Students"
            ContentTemplate="{DataTemplate views:StudentsPage}"
            Route="StudentsPage" 
            Icon="students.png"/>

        <ShellContent
            Title="Books"
            ContentTemplate="{DataTemplate views:BooksPage}"
            Route="BooksPage" 
            Icon="book.png"/>

        <ShellContent
            Title="ImportExport"
            ContentTemplate="{DataTemplate views:ImportExportPage}"
            Route="ImportExportPage" 
            Icon="import_export.png"/>
    </TabBar>
</Shell>
