<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="LibraryManagementMaui.MainContainer"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:LibraryManagementMaui.Components">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header row -->
            <RowDefinition Height="Auto" />
            <!-- Content row -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Persistent header -->
        <ContentView Grid.Row="0">
            <components:BurgerHeader BindingContext="{Binding BurgerHeaderVM}" />
        </ContentView>

        <!-- Main content area -->
        <ContentView Grid.Row="1" x:Name="ContentRegion" />
    </Grid>
</ContentPage>
